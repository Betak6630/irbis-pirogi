@model Irbis.Models.Product

<div id="product-@Model.Id" class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
    <div class="thumbnail">
        <img src="~/Content/img/1_big.jpg" alt="...">
        <div class="caption">
            <h3>@Model.Name</h3>

            <p>@Model.Description</p>

            <div>
                <table>
                    <tbody>
                    <tr>
                        <td colspan="2">Выберите вес:</td>
                    </tr>
                        @foreach (var item in Model.Option)
                        {
                            <tr>
                                <td><input id="options_@item.Id" name="option_@item.ProductId" value="@item.Id" type="radio" checked=""></td>
                                <td><label for="options_@item.Id">@item.Weight г. —  <span>@item.Price <span>руб.</span></span></label></td>
                            </tr>
                        }
                       
                    </tbody>
                </table>

                <div>
                    <div class="input-group">
                        <input type="number" class="form-control" name="amount" value="1">
                    </div>
                </div>

                <button class="btn btn-gold btn-sm pull-right" role="button" onclick="">В корзину</button>
            </div>
        </div>
    </div>
</div>