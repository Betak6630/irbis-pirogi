@model Irbis.Models.Product

<div id="product-@Model.Id" class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
    <div class="thumbnail">
        <img src="~/Content/img/1_big.jpg" alt="...">
        <div class="caption">
            <h3>@Model.Name</h3>

            <p>@Model.Description</p>

            <div>
                <table>
                    <tbody>
                        <tr>
                            <td colspan="2">Выберите вес:</td>
                        </tr>
                        <tr>
                            <td><input id="variants_1200" name="variant_@Model.Id" value="1200" type="radio" checked=""></td>
                            <td><label for="variants_1200">1200 г. —  <span>700 <span>руб.</span></span></label></td>
                        </tr>
                        <tr>
                            <td><input id="variants_1000" name="variant_@Model.Id" value="1000" type="radio"></td>
                            <td><label for="variants_1000">1000 г. —  <span>650 <span>руб.</span></span></label></td>
                        </tr>
                    </tbody>
                </table>

                <div>
                    <div class="input-group">
                        <input type="number" class="form-control" name="amount" value="1">
                    </div>
                </div>

                <button class="btn btn-gold btn-sm pull-right" role="button" onclick="">В корзину</button>
            </div>
        </div>
    </div>
</div>