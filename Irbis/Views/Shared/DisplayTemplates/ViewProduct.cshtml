@model Irbis.Models.Product

<div id="product-@Model.Id" class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
    <div class="thumbnail">
        <img src="~/Content/img/1_big.jpg" alt="...">
        <div class="caption">
            <h3>@Model.Name</h3>
            <p>@Model.Description</p>
            <p><button  class="btn btn-gold" role="button" onclick="irbis.product.addToCart()">В корзину</button></p>
        </div>
    </div>
</div>